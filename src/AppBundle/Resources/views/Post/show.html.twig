{% extends 'FOSUserBundle::layout.html.twig' %}

{% block title %}
    {{ post.title }} | {{ username }} {{ parent() }}
{% endblock %}

{% block body %}
    <h1>
        {{ post.title }}
        {% if app.user and app.user.username is same as(username) %}
            <small>
                <a
                        href="{{ path('post_edit', {
                            'username': username,
                            'slug': post.slug
                        }) }}"
                >
                    Edit
                </a>
            </small>
        {% endif %}
    </h1>
    {{ post.body|markdown }}
{% endblock %}
