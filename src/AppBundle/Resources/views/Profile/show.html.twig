{% extends 'FOSUserBundle::layout.html.twig' %}

{% block title %}
    {{ username }} {{ parent() }}
{% endblock %}

{% block body %}
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    <div class="list-group">
        {% for post in posts %}
                <a
                        href="{{ path('post_edit', {'slug': post.slug, 'username': username}) }}"
                        class="list-group-item"
                >
                    {{ post.title }}
                </a>
        {% endfor %}
    </div>
{% endblock %}
